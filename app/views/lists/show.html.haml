%div#grocery_list
  %h3 Grocery List

  %div#items
    - @list.list_items.sort_by(&:name).each do |item|
      %div{:id => html_id(item)}
        %div.first= item.name
        %div= item.qty
        %div.last= remove_item_from_list_button(item)
      
= render :partial => "/layouts/nutrition_table", :locals => {:record => @list}
